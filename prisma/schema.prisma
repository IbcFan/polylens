generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Alert {
  id         Int      @id @default(autoincrement())
  channelId  String
  chain      String
  clientType String
  userEmail  String
  threshold  Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userEmail])
}
